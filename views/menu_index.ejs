<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head.ejs") %> 
    <body class="index-ejs">
        <h1>Welcome to gitPub</h1>
        <main>
            <h1 class="sub-head">Drinks</h1>
            <ul class="menu-list">
                <% for(let i = 0; i < drinks.length; i++){ %>
                    <li class="menu-items zoom"> 
                        <a class="menu-links" href="/menu/drinks/<%= i %> "><%= drinks[i].name %></a> 
                    </li>
               <% } %> 
            </ul>
            <h1 class="sub-head">Food</h1>
            <ul>
                <% for(let i = 0; i < food.length; i++){ %> 
                    <li class="menu-items zoom">
                        <a class="menu-links" href="/menu/food/<%= i %> "><%= food[i].name %> </a>
                    </li>
                <% } %> 
            </ul>
        </main>
    </body>
</html>